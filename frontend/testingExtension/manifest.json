{
    "manifest_version": 3,
    "name": "Hello Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
      "default_title": "Action Button",
      "default_icon": "logo.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["index.html"],
        "matches": ["https://*/*"]
      },
      {
        "resources": ["style.css"],
        "matches": ["https://*/*"]
      }
    ],
    "permissions": [
      "activeTab",
      "scripting",
      "tabs"
    ],
    "background":{
      "service_worker": "service-worker.js"
    }
  }