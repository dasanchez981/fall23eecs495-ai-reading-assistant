{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "AI Reading Assistant Extension",
    "action": {
        "default_popup": "index.html",
        "default_title": "Click to open panel"
    },

    "permissions": [
        "sidePanel",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "32": "icon.png"
    }
}